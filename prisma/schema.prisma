datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Installer {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  phone       String
  costPerKw   Float
  serviceAreas ServiceArea[]
}

model Estado {
  id         Int      @id @default(autoincrement())
  nombre     String
  ciudades   City[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model City {
  id         Int      @id @default(autoincrement())
  nombre     String
  estadoId   Int
  estado     Estado   @relation(fields: [estadoId], references: [id])
  serviceAreas ServiceArea[]
}

model ServiceArea {
  id          Int          @id @default(autoincrement())
  installerId Int
  cityId      Int

  installer   Installer   @relation(fields: [installerId], references: [id])
  city        City        @relation(fields: [cityId], references: [id])
}


model PanelSolar {
  id                   Int      @id @default(autoincrement())
  modelo               String
  capacidadW           Int
  fabricante           String
  eficiencia           Float
  dimensiones          String
  peso                 Float
  precio               Float
  imageUrl             String?
  voltajeVoc           Float   
  corrienteIsc         Float   
  voltajeVmp           Float   
  corrienteImp         Float   
  tipoCelda            String  
  cantidadCeldas       Int     
  tolerancia           Float   
  maxVoltajeSistema    Float   
  temperaturaOperacion String  
  garantiaProducto     Int     
  garantiaPotencia     Int    
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}



model Microinversor {
  id                    Int      @id @default(autoincrement())
  modelo                String
  capacidadW            Int
  fabricante            String
  eficiencia            Float
  dimensiones           String
  peso                  Float
  precio                Float
  imageUrl              String?
  DangerMppzone         Float?   
  SafeMppzone           Float?   
  MppTrackers           Float?   
  voltajeMinstart       Float?  
  voltajeEntrada        Float
  voltajeNomina         Float?   
  corrienteEntrada      Float
  corrienteSalida       Float
  voltajeSalida         Float
  capacidadWsalida      Float?   
  fases                 Int
  temperaturaOperacion  String
  garantiaProducto      Float
  garantiaPotencia      Float
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

